{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src/scripts", // Source folder for .ts files
    "outDir": "./dist/js", // Destination folder for compiled .js files
    "sourceMap": true, // Enable source maps
    "noEmitOnError": true, // Don't emit JS if there are TypeScript errors
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/scripts/**/*.ts"], // Include all .ts files in src/scripts
  // "include": ["dist/js/**/*.js"], // Include all .js files in src/scripts
  "exclude": ["node_modules", "dist/js"] // Exclude node_modules
}
